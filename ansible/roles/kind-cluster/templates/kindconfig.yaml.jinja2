kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
nodes:
- role: control-plane
  extraPortMappings:
  - containerPort: 6443
    hostPort: 443
  extraMounts:
  - hostPath: /dev/
    containerPath: /dev/
  labels:
    openstack-control-plane: enabled
- role: worker
  extraMounts:
  - hostPath: /dev/
    containerPath: /dev/
  labels:
    openstack-compute-node: enabled
    openstack-network-node: enabled
    openvswitch: enabled
- role: worker
  extraMounts:
  - hostPath: /dev/
    containerPath: /dev/
  labels:
    openstack-compute-node: enabled
    openstack-network-node: enabled
    openvswitch: enabled
- role: worker
  extraMounts:
  - hostPath: /dev/
    containerPath: /dev/
  labels:
    openstack-compute-node: enabled
    openstack-network-node: enabled
    openvswitch: enabled
networking:
  ipFamily: ipv4
  podSubnet: ${PODS_CIDR}
  serviceSubnet: ${SERVICES_CIDR}
  apiServerPort: 6443
